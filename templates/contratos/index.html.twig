{% extends 'base.html.twig' %}

{% block title %}Hello ContratosController!{% endblock %}

{% block stylesheets %}
    {{parent()}}
{% endblock %}

{% block body %}
{{parent()}}
{% for message in app.flashes('exito') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
<div class="card" style="width:50%;margin-left:20%;margin-top: 5%;padding:30px">
{{ form_start(form) }}
    <div class="mb-3">
    {{ form_label(form.num_contrato,) }}
    {{ form_widget(form.num_contrato,{'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
    {{ form_label(form.fecha_contrato) }}
    {{ form_widget(form.fecha_contrato,{'attr': {'class': 'form-control','type':'datetime'}}) }}
    </div>
    <div class="mb-3">
    {{ form_label(form.valor_total) }}
    {{ form_widget(form.valor_total,{'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
    {{ form_widget(form.guardar, {'attr': {'class': 'btn-success'}}) }}
    </div>
{{ form_end(form) }}
</div>
{% endblock %}
